block content
    div(class="container" style="margin-top: 40px;, margin-buttom:40px")
        div(class="col")
        div(class="col row")
            each value,index in zh
                if index % 6 == 0
                    div(class="col-2" id="book"+index)
                        a(href='http://localhost:3000/memory-verses?book='+en[index]) #{zh[index]}
                    div(class="col-2" id="book"+index)
                        a(href='http://localhost:3000/memory-verses?book='+en[index+1]) #{zh[index+1]}
                    div(class="col-2" id="book"+index)
                        a(href='http://localhost:3000/memory-verses?book='+en[index+2]) #{zh[index+2]}
                    div(class="col-2" id="book"+index)
                        a(href='http://localhost:3000/memory-verses?book='+en[index+3]) #{zh[index+3]}
                    div(class="col-2" id="book"+index)
                        a(href='http://localhost:3000/memory-verses?book='+en[index+4]) #{zh[index+4]}
